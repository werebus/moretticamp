= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = f.email_field :email, autofocus: true
  = f.password_field :password, autocomplete: 'off'
  = f.check_box :remember_me, label: 'Remember Me' if devise_mapping.rememberable?
  .d-grid.gap-2
    = f.submit 'Sign In', class: 'btn btn-primary'
= render partial: 'devise/shared/oauth'
- if Rails.env.development?
  %hr.my-4
  = bootstrap_form_with url: dev_login_path, local: true do |f|
    = f.select :id, User.dev_login_options, label: 'Developer Login'
    .d-grid.gap-2
      = f.submit 'Dev Login', class: 'btn btn-secondary'
