- if devise_mapping.omniauthable?
  .btn-group.d-grid.mt-3
    - OauthProvider.all.each do |oap|
      = link_to oap.icon.present? ? icon('fab', oap.icon) : oap.name.first,
        omniauth_authorize_path(resource_name, oap.label),
        method: :post,
        title: "Sign in with #{oap.name}",
        class: 'btn btn-primary'
