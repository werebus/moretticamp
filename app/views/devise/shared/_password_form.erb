<div id="pusher" class="show-for-medium-up"></div>
<div id="login-form" class="row">
  <div class="small-8 columns small-centered">
    <div class="panel">
      <%= form_for(resource, as: resource_name, url: send(path_method, resource_name), html: { method: :put }) do |f| %>
        <%= f.hidden_field token %>
        <div class="row">
          <div class="small-12 column">
            <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
          </div>
        </div>
        <div class="row">
          <div class="small-12 column">
            <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirm Password"  %>
          </div>
        </div>
        <div class="row">
          <div class="small-12 column">
            <%= f.submit button_text, class: "button expand" %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="small-12 column">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
