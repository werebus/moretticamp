<div class="row">
  <div class="small-8 small-centered column">
    <div class="panel">
      <div class="row">
        <div class="small-12 column">
          <h3 class="subheader">
            <%=@event.display_title %>
          </h3>
        </div>
      </div>
      <div class="row">
        <div class="small-6 column">
          <strong>From:</strong>
          <%=@event.start_date %>
        </div>
        <div class="small-6 column">
          <strong>To:</strong>
          <%=@event.end_date %>
        </div>
      </div>
      <% if @event.description.present? %>
        <div class="row">
          <div class="small-12 column">
            <p class="description">
            <%=@event.description %>
            </p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="small-4 column">
        <% if @owner %>
          <%= link_to 'Edit', edit_event_path(@event) %>
        <% end %>
      </div>
      <div class="small-4 column text-center">
        <% if @owner %>
          <%= link_to 'Delete', event_path(@event), method: :delete %>
        <% end %>
      </div>
      <div class="small-4 column text-right">
        <%= link_to 'Back', events_path %>
      </div>
    </div>
  </div>
</div>
