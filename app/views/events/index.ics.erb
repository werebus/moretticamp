BEGIN:VCALENDAR
VERSION:2.0
PRODID:-//wereb.us//moretti.camp//EN
CALSCALE:GREGORIAN
TZID:US-Eastern
METHOD:PUBLISH
<% @events.each do |event| %>
BEGIN:VEVENT
UID:<%= event.id %>@moretti.camp
DTSTART;VALUE=DATE:<%= event.start_date.to_s(:number) %>
DTEND;VALUE=DATE:<%= (event.end_date + 1.day).to_s(:number) %>
SUMMARY:<%= event.display_title %>
DESCRIPTION:<%= event.description %>
LAST-MODIFIED:<%= event.updated_at.to_s(:number) %>
STATUS:CONFIRMED
END:VEVENT
<% end %>
END:VCALENDAR
