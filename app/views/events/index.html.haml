.row
  .sidebar.medium-3.medium-push-9.columns
    %ul#nav-links.medium-vertical.menu.clearfix
      - if @season
        %li
          = link_to events_path(format: :pdf) do
            = icon 'fas', 'print'
            %span Print
        %li
          = link_to new_event_path do
            = icon 'fas', 'calendar'
            %span New Event
      - if current_user.invitations?
        %li
          = link_to new_user_invitation_path do
            = icon 'fas', 'user-plus'
            %span Invite New User
      - if current_user.admin
        %li
          = link_to seasons_path do
            = icon 'fas', 'edit'
            %span Manage Seasons
        %li
          = link_to new_notification_path do
            = icon 'fas', 'envelope-open'
            %span Send Notification
    .row.collapse
      %label
        Calendar Feed URL
        %span.has-tip{title: calendar_tip}
          = icon 'fas', 'question-circle'
    .row.collapse.input-group
      = text_field_tag :access_token,
        current_user.feed_url,
        class: 'input-group-field',
        id: 'feed-url-field',
        readonly: true
      .input-group-button
        = button_tag icon('fas', 'clipboard'),
          data: {clipboard_target: '#feed-uri-field'},
          class: 'button clip'
  .medium-9.medium-pull-3.columns
    - if @season
      - caldata = Hash.new.tap do |cd|
        - cd[:date] = @date.iso8601
        - cd[:start_date] = @season.start_date.iso8601
        - cd[:end_date] = @season.end_date.iso8601
        - cd[:today] = 'true' if @include_today
      #calendar{data: caldata}
    - else
      .secondary.callout
        %h5 Season Not Open
        %p The dates for the next Camp "season" aren't defined yet. Stay tuned.
