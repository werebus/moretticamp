= bootstrap_form_for @event, html: { class: 'border border-secondary-subtle p-3' } do |f|
  - if @event.errors[:base].any?
    = alert @event.errors[:base].to_sentence, 'danger', closable: false
  - if current_user.admin
    = f.text_field :title, help: 'Overrides Owner Name'
    = owner_dropdown(f, @event)
  .row
    .col-sm-6
      = f.date_field :start_date, label: 'First Date'
    .col-sm-6
      = f.date_field :end_date, label: 'Last Date'
  = f.text_area :description, label: 'Notes'
  .d-grid.gap-2
    = f.submit class: 'btn btn-primary'
