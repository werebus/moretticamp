= bootstrap_form_for season, html: { class: 'card p-3' } do |f|
  = alert season.errors[:base].to_sentence, 'danger', closable: false if season.errors[:base].any?
  .row
    .col-sm-6
      = f.date_field :start_date, label: 'First Date'
    .col-sm-6
      = f.date_field :end_date, label: 'Last Date'
  .d-grid.gap-2
    = f.submit class: 'btn btn-primary'
