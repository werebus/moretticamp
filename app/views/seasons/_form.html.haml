= form_for(@season) do |f|
  .callout
    - if @season.invalid?
      .alert.callout
        %ul
          - @eas.errors.each do |error|
            %li= error.full_message
    .row
      .small-6.column
        = f.date_field :start_date, label: 'First Date'
      .small-6.column
        = f.date_field :end_date, label: 'Last Date'
    .row
      .small-12.column
        = f.submit class: 'expanded button'
