<div class="row">
  <h1>Listing Seasons</h1>

  <table>
    <thead>
      <tr>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @seasons.each do |season| %>
        <tr class="<%= season == @current_season ? 'current-season' : 'noncurrent-season' %>">
          <td><%= season.start_date %></td>
          <td><%= season.end_date %></td>
          <td><%= link_to 'Edit', edit_season_path(season) %></td>
          <td><%= link_to 'Destroy', season, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Season', new_season_path %>
</div>
