!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= content_for?(:title) ? yield(:title) : 'Il Campo Moretti'

    = favicon_link_tag    '/favicon.ico'
    = stylesheet_link_tag 'application', media: 'all'
    = csrf_meta_tags
  %body
    %header.top-bar
      .top-bar-left
        %h1= link_to 'Il Campo Moretti', authenticated_root_path
      .top-bar-right
        %ul.menu
          %li= link_to current_user.full_name, edit_user_registration_path
          %li= link_to 'Documents', documents_page_path
          %li= link_to 'Logout', destroy_user_session_path, method: :delete
    .row
      .medium-8.medium-centered.columns
        - if notice.present?
          .success.callout{data: {closable: true}}
            = notice
            %button.close-button{data: {close: true}, type: 'button'} ×
        - if alert.present?
          .alert.callout{data: {closable: true}}
            = alert
            %button.close-button{data: {close: true}, type: 'button'} ×
    = yield
    = javascript_include_tag 'application'
