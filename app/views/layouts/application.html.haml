!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= page_title

    = favicon_link_tag    '/favicon.ico'
    = stylesheet_pack_tag 'application', media: 'all'
    = csrf_meta_tags
    = csp_meta_tag
  %body
    %header.top-bar
      .top-bar-left
        %h1= link_to 'Il Campo Moretti', authenticated_root_path
      .top-bar-right
        %nav{'aria-labeledby' => 'topnav'}
          %h2#topnav.show-for-sr 'Account Actions'
          %ul.menu
            %li= link_to current_user.full_name, edit_user_registration_path
            %li= link_to 'Documents', documents_page_path
            %li= link_to 'Logout', destroy_user_session_path, method: :delete
    .row
      .medium-8.medium-centered.columns
        = display_flash_messages
    = yield
    = javascript_pack_tag 'application', nonce: true
    = comment_lines il_campo_moretti
