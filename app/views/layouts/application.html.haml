!!!
%html{lang: 'en'}
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
    %title= page_title

    = favicon_link_tag    '/favicon.ico'
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application', nonce: true, type: 'module'
    = csrf_meta_tags
    = csp_meta_tag
  %body
    - if content_for?(:body)
      = yield(:body)
    - else
      %header.top-bar
        .top-bar-left
          %h1= link_to 'Il Campo Moretti', authenticated_root_path
        .top-bar-right
          %nav{'aria-labeledby' => 'topnav'}
            %h2#topnav.show-for-sr 'Account Actions'
            %ul.menu
              %li= link_to current_user.full_name, edit_user_registration_path
              %li= link_to 'Logout', destroy_user_session_path, method: :delete
      .row
        .medium-8.medium-centered.columns
          = display_flash_messages
      = yield
      = comment_lines poem
