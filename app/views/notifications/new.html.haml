.row
  .small-8.columns.small-centered
    .row
      .small-12.columns
        %h1
          Send New Notification
    =form_tag(controller: 'notifications', action: 'create') do
      .callout
        .row
          .small-12.column
            = label_tag 'subject'
            = text_field_tag 'subject', '', autofocus: true, required: true
          .small-12.column
            = label_tag 'body'
            = text_area_tag 'body', '', rows: 6, required: true
          .small-12.column
            = check_box_tag 'override'
            = label_tag 'override', 'Ignore user email preference'
          .small-12.column
            = submit_tag 'Send', class: 'expanded button'
